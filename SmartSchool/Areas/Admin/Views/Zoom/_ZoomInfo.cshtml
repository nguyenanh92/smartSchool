@using Models
@{
    ZoomInfo _data = new ZoomInfo();

    if (ViewBag.Obj != null)
    {
        _data = ViewBag.Obj;
    }

}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">

            <div class="col-sm-12 col-md-10">
                <h6 class="m-0 font-weight-bold text-primary">Zoom Account Info</h6>

            </div>
            <div class="col-sm-12 col-md-2" style="float: right">

                <a href="#" onclick="alert('Đang phát triển !!!');" class="btn btn-info btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-info-circle"></i>
                    </span>
                    <span class="text">Reconnect</span>
                </a>

            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">FullName</th>
                            <th scope="col">Email</th>
                            <th scope="col">ID Meeting</th>
                            <th scope="col">Host Key</th>
                            <th scope="col">Url Meeting</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">@_data.First_name @_data.Last_name</th>
                            <td>@_data.Email</td>
                            <td>@_data.Pmi</td>
                            <td>@_data.Host_key</td>
                            <td><span> @_data.Personal_meeting_url</span> <p><a href="@_data.Personal_meeting_url" target="_blank">Create Meeting </a></p></td>
                            <td>
                                <button type="button" class="btn btn-danger" onclick=""><i class="fas fa-trash-alt"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

